<h2><?php echo $this->translate($title . 'list'); ?></h2>
<table class="crud-list">
    <thead>
        <tr>
            <?php foreach ($entityProperties as $propertyName): ?>
            <th>
                <?php echo $this->translate($propertyName); ?>
            </th>
            <?php endforeach; ?>
            <th class="crudlist-iconcol">
                <?php foreach ($listHeadIcons as $icon => $ref): ?>
                    <a title="<?php echo $this->translate($icon); ?>" class="<?php echo $icon; ?>-icon crudlist-icon" href="<?php echo $ref; ?>">
                        <span></span>
                    </a>
                <?php endforeach; ?>
            </th>
        </tr>
    </thead>
    <tbody>
        <?php if (empty($entitiesData)): ?>
            <tr>
                <?php foreach ($entityProperties as $property): ?>
                <td></td>
                <?php endforeach; ?>
            </tr>
        <?php else: ?>
        <?php foreach ($entitiesData as $entityId => $entityData): ?>
        <tr>
            <?php foreach ($entityData as $value): ?>
            <td>
                <?php if (gettype($value) == 'boolean') {
                    $value = ($value == true) ? 'yes' : 'no';
                } ?>
                <?php echo $value; ?>
            </td>
            <?php endforeach; ?>
            <td>
                <?php foreach (array_reverse($listIcons) as $icon => $ref): ?>
                    <a title="<?php echo $this->translate($icon); ?>" class="<?php echo $icon; ?>-icon crudlist-icon" href="<?php echo $ref . '/' . $entityId; ?>">
                        <span></span>
                    </a>
                <?php endforeach; ?>
            </td>
        </tr>
        <?php endforeach; ?>
        <?php endif; ?>
    </tbody>
</table>
